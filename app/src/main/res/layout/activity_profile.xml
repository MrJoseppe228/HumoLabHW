<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="132dp"
                android:layout_height="116dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="28dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ava"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/canser"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:orientation="vertical"
                android:layout_marginTop="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/profile_head_color"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Angelica Jackson"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#60595085"
                    android:textSize="14sp"
                    android:text="Analyzer"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/profile_head_color"
                    android:textSize="14sp"
                    android:text="@string/change_profile" />
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            android:text="Strong side:"
            android:textColor="@color/profile_head_color"
            android:textSize="14sp"
            android:textStyle="normal" />


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="23dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginHorizontal="2dp"
                    app:cardBackgroundColor="@color/background_strong_side"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="8dp"
                        android:text="Analytics"
                        android:textColor="@color/strong_side_text_color"
                        android:textSize="11sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginHorizontal="2dp"
                    app:cardBackgroundColor="@color/background_strong_side"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="8dp"
                        android:text="Perfectionism"
                        android:textColor="@color/strong_side_text_color"
                        android:textSize="11sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginHorizontal="2dp"
                    app:cardBackgroundColor="@color/background_strong_side"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="8dp"
                        android:text="Analytics"
                        android:textColor="@color/strong_side_text_color"
                        android:textSize="11sp" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            android:text="Weak side:"
            android:textColor="@color/profile_head_color"
            android:textSize="14sp"
            android:textStyle="normal" />


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="23dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginHorizontal="2dp"
                    app:cardBackgroundColor="@color/background_weak_side"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="8dp"
                        android:text="Perfectionism"
                        android:textColor="@color/weak_side_text_color"
                        android:textSize="11sp" />

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_marginHorizontal="2dp"
                    app:cardBackgroundColor="@color/background_weak_side"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingTop="6dp"
                        android:paddingBottom="8dp"
                        android:text="Analytics"
                        android:textColor="@color/weak_side_text_color"
                        android:textSize="11sp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </HorizontalScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            android:fontFamily="sans-serif-light"
            android:text="My Reports:"
            android:textColor="@color/profile_head_color"
            android:textSize="23sp" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_marginHorizontal="28dp">

            <androidx.cardview.widget.CardView
                android:layout_width="144dp"
                android:layout_height="124dp"
                android:layout_marginHorizontal="5dp"
                app:cardBackgroundColor="#F6F5FB"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mark"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="18dp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon1"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:layout_width="108dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="44dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="@color/task1"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="11sp"
                        android:text="Astro- psychological report"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="#50403572"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="9sp"
                        android:text="Some short description of this type of report."/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="144dp"
                android:layout_height="124dp"
                android:layout_marginHorizontal="5dp"
                app:cardBackgroundColor="#F5F9F9"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:layout_marginStart="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mark"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="18dp"
                        app:tint="#479696" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon2"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:layout_width="108dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="44dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="#479696"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="11sp"
                        android:text="Monthly prediction report"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="#50479696"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="9sp"
                        android:text="Some short description of this type of report."/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="144dp"
                android:layout_height="124dp"
                android:layout_marginHorizontal="5dp"
                app:cardBackgroundColor="#FFF4F4"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:layout_marginTop="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/mark"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="18dp"
                        app:tint="#FF5D50" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon3"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:layout_width="108dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="44dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="#FF5648"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="11sp"
                        android:text="Daily Prediction"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="#A27A7A"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="9sp"
                        android:text="Some short description of this type of report."/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="144dp"
                android:layout_height="124dp"
                android:layout_marginHorizontal="5dp"
                app:cardBackgroundColor="#FDF9FB"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon4"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"/>

                    <TextView
                        android:layout_width="108dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="44dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="#C93F8D"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="11sp"
                        android:text="Love report"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="80dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="20dp"
                        android:textColor="#E791BE"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="9sp"
                        android:text="Some short description of this type of report."/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>